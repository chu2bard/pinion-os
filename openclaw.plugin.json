{
    "name": "pinion-chain-intel",
    "version": "1.0.0",
    "description": "On-chain intelligence, transactions and wallet tools on Base. 9 skills paywalled via x402 USDC micropayments (.01 each).",
    "author": "Pinion Protocol",
    "license": "MIT",
    "homepage": "https://pinionos.com",
    "skills": [
        {
            "name": "balance",
            "description": "Get ETH and USDC balances for any Base address",
            "endpoint": "/balance/:address",
            "method": "GET",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "address": {
                        "type": "string",
                        "description": "Ethereum address (0x...)",
                        "pattern": "^0x[0-9a-fA-F]{40}$"
                    }
                },
                "required": [
                    "address"
                ]
            }
        },
        {
            "name": "tx",
            "description": "Get decoded transaction details for any Base transaction",
            "endpoint": "/tx/:hash",
            "method": "GET",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "hash": {
                        "type": "string",
                        "description": "Transaction hash (0x...)",
                        "pattern": "^0x[0-9a-fA-F]{64}$"
                    }
                },
                "required": [
                    "hash"
                ]
            }
        },
        {
            "name": "price",
            "description": "Get current USD price for ETH or other Base tokens",
            "endpoint": "/price/:token",
            "method": "GET",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "description": "Token symbol (ETH, USDC, WETH, DAI, USDT, CBETH)",
                        "enum": [
                            "ETH",
                            "USDC",
                            "WETH",
                            "DAI",
                            "USDT",
                            "CBETH"
                        ]
                    }
                },
                "required": [
                    "token"
                ]
            }
        },
        {
            "name": "wallet",
            "description": "Generate a fresh Base wallet keypair",
            "endpoint": "/wallet/generate",
            "method": "GET",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {},
                "required": []
            }
        },
        {
            "name": "chat",
            "description": "Chat with the Pinion AI agent",
            "endpoint": "/chat",
            "method": "POST",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "messages": {
                        "type": "array",
                        "description": "Conversation messages",
                        "items": {
                            "type": "object",
                            "properties": {
                                "role": {
                                    "type": "string"
                                },
                                "content": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "required": [
                    "messages"
                ]
            }
        },
        {
            "name": "send",
            "description": "Construct unsigned ETH or USDC transfer transaction on Base",
            "endpoint": "/send",
            "method": "POST",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "to": {
                        "type": "string",
                        "description": "Recipient address (0x...)"
                    },
                    "amount": {
                        "type": "string",
                        "description": "Amount in human-readable units"
                    },
                    "token": {
                        "type": "string",
                        "enum": [
                            "ETH",
                            "USDC"
                        ]
                    }
                },
                "required": [
                    "to",
                    "amount",
                    "token"
                ]
            }
        },
        {
            "name": "trade",
            "description": "Get unsigned swap transaction via 1inch aggregator on Base",
            "endpoint": "/trade",
            "method": "POST",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "src": {
                        "type": "string",
                        "description": "Source token symbol"
                    },
                    "dst": {
                        "type": "string",
                        "description": "Destination token symbol"
                    },
                    "amount": {
                        "type": "string",
                        "description": "Amount of source token"
                    },
                    "from": {
                        "type": "string",
                        "description": "Sender address (0x...)"
                    },
                    "slippage": {
                        "type": "number",
                        "description": "Slippage tolerance %"
                    }
                },
                "required": [
                    "src",
                    "dst",
                    "amount",
                    "from"
                ]
            }
        },
        {
            "name": "fund",
            "description": "Get wallet balance and funding instructions for Base",
            "endpoint": "/fund/:address",
            "method": "GET",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "address": {
                        "type": "string",
                        "description": "Ethereum address (0x...)"
                    }
                },
                "required": [
                    "address"
                ]
            }
        },
        {
            "name": "broadcast",
            "description": "Sign and broadcast an unsigned transaction on Base",
            "endpoint": "/broadcast",
            "method": "POST",
            "price": "$0.01",
            "currency": "USDC",
            "network": "base",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "tx": {
                        "type": "object",
                        "description": "Unsigned transaction object (from /send or /trade)",
                        "properties": {
                            "to": { "type": "string", "description": "Recipient or contract address" },
                            "value": { "type": "string", "description": "ETH value in hex" },
                            "data": { "type": "string", "description": "Calldata in hex" },
                            "chainId": { "type": "number", "description": "Must be 8453 (Base)" }
                        },
                        "required": ["to", "chainId"]
                    },
                    "privateKey": {
                        "type": "string",
                        "description": "Sender's private key (0x + 64 hex chars)"
                    }
                },
                "required": [
                    "tx",
                    "privateKey"
                ]
            }
        }
    ],
    "x402": {
        "facilitator": "https://facilitator.payai.network",
        "network": "base",
        "paymentToken": "USDC"
    },
    "skillDirs": [
        "skills/balance",
        "skills/tx",
        "skills/price",
        "skills/wallet",
        "skills/chat",
        "skills/send",
        "skills/trade",
        "skills/fund",
        "skills/broadcast"
    ]
}
